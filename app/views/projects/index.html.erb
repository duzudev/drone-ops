<div class="container mt-4">
  <h1 class="display-4 text-center">Projects</h1>

  <% if notice %>
    <p class="alert alert-info text-center"><%= notice %></p>
  <% end %>
  
  <% if alert %>
    <p class="alert alert-danger text-center"><%= alert %></p>
  <% end %>

  <div class="mb-3">
    <div class="input-group">
      <input type="text" class="form-control" placeholder="Search projects..." aria-label="Search projects">
      <div class="input-group-append">
        <button class="btn btn-primary" type="button">Search</button>
      </div>
    </div>
    
    <div class="mt-3">
      <%= link_to 'Add New Project', '#', class: 'btn btn-success', data: { toggle: 'modal', target: '#addProjectModal' } %>
    </div>
  </div>

  <div class="row mt-4">
    <% @projects.each do |project| %>
      <div class="col-12 col-md-6 col-lg-4 mb-4">
        <div class="card h-100 project-card">
          <div class="card-body">
            <h5 class="card-title"><%= project.name %></h5>
            <p class="card-text"><%= truncate(project.description, length: 100) %></p>
            <!-- <p class="card-text"><strong>Start Date:</strong> <%= project.start_date.strftime('%Y-%m-%d') %></p> -->
            <!-- <p class="card-text"><strong>End Date:</strong> <%= project.end_date.strftime('%Y-%m-%d') %></p> -->
            <p class="card-text"><strong>Status:</strong> <%= project.status %></p>
            <div class="d-flex justify-content-between">
              <div class="d-flex justify-content-center">
                <div class="btn-group" role="group" aria-label="Project actions">
                  <%= link_to 'View', project_path(project), class: 'btn btn-info btn-sm' %>
                  <%= link_to 'Edit', edit_project_path(project), class: 'btn btn-warning btn-sm' %>
                  <%= link_to 'Delete', project_path(project), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
                </div>
              </div>
            </div>


            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if @projects.empty? %>
    <div class="alert alert-info text-center">No projects found.</div>
  <% end %>
</div>

<!-- Add Project Modal -->
<div class="modal fade" id="addProjectModal" tabindex="-1" role="dialog" aria-labelledby="addProjectModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addProjectModalLabel">Add New Project</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(model: Project.new, local: true) do |form| %>
          <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, class: 'form-control', placeholder: 'Project Name' %>
          </div>
          <div class="form-group">
            <%= form.label :description %>
            <%= form.text_area :description, class: 'form-control', placeholder: 'Project Description' %>
          </div>
          <div class="form-group">
            <%= form.label :start_date %>
            <%= form.date_select :start_date, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :end_date %>
            <%= form.date_select :end_date, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :status %>
            <%= form.select :status, [['Active', 'Active'], ['Completed', 'Completed'], ['Inactive', 'Inactive']], {}, class: 'form-control' %>
          </div>
      </div>
      <div class="modal-footer">
        <%= form.submit 'Create Project', class: 'btn btn-primary' %>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
        <% end %>
    </div>
  </div>
</div>
