<div class="container-fluid d-flex justify-content-center align-items-center" style="height: 80vh;"> <!-- Adjust padding for navbar height -->
  <div class="col-12 col-md-4" style="padding: 30px; border-radius: 5px; background-color: #f8f9fa;">
    <h3 class="text-center mb-4">Register</h3>

    <%= form_with model: @user, url: sign_up_path do |form| %>
      <% if form.object.errors.any? %>
        <div class="alert alert-danger mb-4"> <!-- Added margin-bottom -->
          <h6 class="mb-0"><%= pluralize(form.object.errors.count, "error") %> prohibited this account from being saved:</h6>
          <div>
            <%= form.object.errors.full_messages.each do |message| %>
              <div><%= message %></div>
            <% end %>
          </div>
        </div>
      <% end %>

      <div class="mb-4"> <!-- Increased margin -->
        <%= form.label :email, class: "form-label" %>
        <%= form.text_field :email, class: "form-control", placeholder: "duzu@arcoworldwide.ng" %>
      </div>

      <div class="mb-4"> <!-- Increased margin -->
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, class: "form-control", placeholder: "password" %>
      </div>

      <div class="mb-4"> <!-- Increased margin -->
        <%= form.label :password_confirmation, class: "form-label" %>
        <%= form.password_field :password_confirmation, class: "form-control", placeholder: "password" %>
      </div>

      <div class="mb-4"> <!-- Increased margin -->
        <%= form.submit "Register", class: "btn btn-primary w-100" %>
      </div>
    <% end %>
  </div>
</div>
