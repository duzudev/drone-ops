<!DOCTYPE html>
<html>
<head>
  <title>AWS | Ops</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
  
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>

<body>
  
  <%= render 'layouts/navbar' %>

  <div class="container mt-4 pt-5">
    <div class="p-2 small">
      <% if notice %>
        <p class="alert alert-info small" id="notice"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger small" id="alert"><%= alert %></p>
      <% end %>
    </div>

    <%= yield %>
  </div>

  <!-- Bootstrap JS and dependencies -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Import application JavaScript -->
  <script type="module" src="<%= asset_path('application.js') %>"></script>

  <script>
    // Function to hide alerts after 10 seconds
    setTimeout(function() {
      const notice = document.getElementById('notice');
      const alert = document.getElementById('alert');
      if (notice) {
        notice.style.display = 'none';
      }
      if (alert) {
        alert.style.display = 'none';
      }
    }, 10000); // 10000 milliseconds = 10 seconds
  </script>
</body>
</html>
