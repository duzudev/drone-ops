<h3>Forgor your password?</h3>

<%= form_with url: password_reset_path do |form| %>
    <div class="mb-3">
        <%= form.label :email%>
        <%= form.text_field :email, class: "form-control", placeholder: "duzu@arcoworldwide.ng"%>
    </div>
    <div class="mb-3">
        <%= form.submit "Reset Password", class: "btn btn-primary"%>
    </div>
    <% end %>