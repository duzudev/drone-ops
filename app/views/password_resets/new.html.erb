<div class="container-fluid d-flex justify-content-center align-items-center" style="height: 70vh; padding-top: 56px;"> <!-- Adjust padding for navbar height -->
  <div class="col-12 col-md-4" style="padding: 30px; border-radius: 5px; background-color: #f8f9fa;">
    <h3 class="text-center mb-4">Forgot your password?</h3>
    
    <hr class="my-4"> <!-- Horizontal rule with vertical spacing -->

    <%= form_with url: password_reset_path do |form| %>
      <div class="mb-4"> <!-- Increased margin -->
        <%= form.label :email, class: "form-label" %>
        <%= form.text_field :email, class: "form-control", placeholder: "duzu@arcoworldwide.ng" %>
      </div>
      
      <div class="mb-4"> <!-- Increased margin -->
        <%= form.submit "Reset Password", class: "btn btn-primary w-100" %>
      </div>
    <% end %>
  </div>
</div>
