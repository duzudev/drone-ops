<div class="container d-flex justify-content-center align-items-center" style="height: 70vh;">
  <div class="col-12 col-md-4" style="padding: 30px; border-radius: 5px; background-color: #f8f9fa;">
    <h3 class="text-center mb-4">Sign In</h3>

    <%= form_with url: sign_in_path, local: true do |form| %>
      <% if flash[:alert] %> <!-- Check for alert messages from the controller -->
        <div class="alert alert-danger mb-4"> <!-- Added margin-bottom for error messages -->
          <h6 class="mb-0"><%= flash[:alert] %></h6>
        </div>
      <% end %>

      <div class="mb-4"> <!-- Increased margin -->
        <%= form.label :email, class: "form-label" %>
        <%= form.text_field :email, class: "form-control", placeholder: "duzu@arcoworldide.ng" %>
      </div>

      <div class="mb-4"> <!-- Increased margin -->
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, class: "form-control", placeholder: "password" %>
      </div>

      <div class="mb-4"> <!-- Increased margin -->
        <%= form.submit "Log In", class: "btn btn-primary w-100" %>
      </div>
    <% end %>

    <hr class="my-4"> <!-- Horizontal rule with vertical spacing -->

    <div class="mt-3 text-center"> <!-- Center the link and add top margin -->
      <%= link_to "Forgot your password?", password_reset_path, class: "link-primary" %>
    </div>
  </div>
</div>
