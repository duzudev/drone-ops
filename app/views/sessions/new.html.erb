<div class="container-fluid d-flex justify-content-center align-items-center" style="height: 80vh;">
  <div class="col-12 col-md-4">
    <div class="card shadow-sm border-light">
      <div class="card-body">
        <%= form_with url: sign_in_path, local: true do |form| %>
          <% if flash[:alert] %>
            <div class="alert alert-danger mb-4">
              <h6 class="mb-0"><%= flash[:alert] %></h6>
            </div>
          <% end %>

          <div class="mb-4">
            <%= form.label :email, class: "form-label" %>
            <%= form.text_field :email, class: "form-control", placeholder: "duzu@arcoworldwide.ng", required: true %>
          </div>

          <div class="mb-4">
            <%= form.label :password, class: "form-label" %>
            <%= form.password_field :password, class: "form-control", placeholder: "password", required: true %>
          </div>

          <div class="mb-4">
            <%= form.submit "Log In", class: "btn btn-secondary w-100" %>
          </div>

          <hr class="my-4">

          <div class="mt-3 text-center">
            <%= link_to "Forgot your password?", password_reset_path, class: "link-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
